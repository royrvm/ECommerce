@model ECommerce.Common.Models.CollectionTmp

<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>


<h4>@Html.DisplayFor(model => model.DisbursedLoan.Customer.FullName)</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CollectionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentBalance)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.Details)
    {
        <tr>
            <td>
                @item.CollectionDate.ToString("yyyy-MM-dd")
            </td>
            <td>
                @item.Payment.ToString("C1")
            </td>
            <td>
                @item.CurrentBalance.ToString("C1")
            </td>
        </tr>
    }
    <tr>
        <td>
            @Html.DisplayFor(model => model.CollectionDate)
        </td>
        <td>
            @Html.DisplayFor(model => model.Payment)
        </td>
        <td>
            @Html.DisplayFor(model => model.CurrentBalance)
        </td>
    </tr>
</table>


<p>
    @Html.ActionLink("Back to List", "Index",new { },new { @class="btn btn-success"})
</p>
